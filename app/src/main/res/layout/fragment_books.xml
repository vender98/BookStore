<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_books_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_book"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/fragment_books_no_data"
        android:layout_width="@dimen/icon_no_data_size"
        android:layout_height="@dimen/icon_no_data_size"
        android:layout_gravity="center"
        android:src="@drawable/ic_no_data"
        android:visibility="gone"
        tools:ignore="ContentDescription"
        tools:visibility="gone" />

    <ProgressBar
        android:id="@+id/fragment_books_progress_bar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        tools:visibility="gone" />

</FrameLayout>
